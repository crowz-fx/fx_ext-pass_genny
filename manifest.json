{
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "name": "Password Generator",
  "short_name": "Pass Genny",
  "author": "Lui Crowie",
  "description": "An extension to create pseudorandom passwords.",
  "version": "1.1",
  "manifest_version": 3,
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png",
    "256": "icons/256.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/32.png",
    "default_title": "Password Generator"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Will open the Pass Genny pop-up page"
    }
  },
  "permissions": [
    "clipboardWrite",
    "storage"
  ]
}